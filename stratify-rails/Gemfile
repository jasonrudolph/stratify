source "http://rubygems.org"

# Default Rails dependencies
gem "rails", "3.2.3"
gem "jquery-rails"

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier',     "~> 1.0.3"
end

# Stratify-specific dependencies
gem "stratify-base"
gem "stratify-foursquare"
gem "stratify-garmin"
gem "stratify-gowalla"
gem "stratify-instapaper"
gem "stratify-itunes"
gem "stratify-rhapsody"
gem "stratify-twitter"
gem "stratify-github"
gem "kaminari"
gem "mongoid_rails_migrations"
gem 'whenever', :require => false
gem 'capistrano' # for deployment
gem 'capistrano-remote-cache-with-project-root' # for deployment

group "development", "test" do
  gem "factory_girl_rails"
  gem "faker"
  gem "rspec-rails"
end

group "test" do
  gem "capybara", "~> 1.0.0.beta1"
  gem "database_cleaner"
  gem "fakeweb"
  gem "growl" # for Guard notifications
  gem "guard-rspec"
  gem "guard-spork"
  gem "launchy"
  gem "mocha"
  gem "rb-fsevent", :require => false if RUBY_PLATFORM =~ /darwin/i
  gem "spork"
end
